@model CategoriesNavigationMenuPartialViewModel

@inject IViewLocalizer  Localizer
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="~/css/CategoriesNavigationMenuPartial.css" type="text/css" />

<div id="mySidenav" class="sidenav">

    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

    <a class="back" asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-CategoryId="@Model.ParentCategoryId"><span class="btn-back">@Localizer["Back"]</span></a>

    @for (int i = 0; i < Model.SubCategories.Count; i++)
    {
        <a asp-area="@Model.Area" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-CategoryId="@Model.CategoryId">@Localizer[@Model.CategoryName]</a>
    }

</div>

<span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9964; @Localizer["Categories"]</span>

<script src="~/js/CategoriesNavigationMenuPartial.js" type="text/javascript"></script>
